<div id="image-content">

    <div class="col-left">

        <div class="post">
            <h2 class="title">{{title}}</h2>
            <h3 class="author">{{author}}</h3>
            <h4 class="subtitle">Subtitle</h4>
        </div>

        <div class="text">
            {{body}}
        </div>

    </div>

    <div class="col-right">

        {{#each images}}
        <div class="row img">
            <img src="{{col_id_11}}" />

            <div class="epigraph">
                {{col_id_12}}
            </div>
        </div>
        {{/each}}

    </div>

</div>

</div>