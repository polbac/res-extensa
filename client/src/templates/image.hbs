<div id="image-content">

    <div class="entries-nav">
        <a id="arrow-prev" href="{{prev}}"><img src="/arrow-prev.svg" /></a>
        <a id="arrow-next" href="{{next}}"><img src="/arrow-next.svg" /></a>
    </div>

    <div class="post">
        <time>{{date}}</time>
        <h2 class="title">{{title}}</h2>
        <h3 class="author">{{author}}</h3>
        <h4 class="subtitle">{{subtitle}}</h4>
    </div>

    <div class="post-content">
        {{#each images}}
        <div class="img-row">
            <img src="{{col_id_1}}" />

            <div class="epigraph">
                {{col_id_2}}
            </div>
        </div>
        {{/each}}
    </div>

</div>

</div>