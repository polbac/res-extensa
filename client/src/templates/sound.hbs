<div id="sound-content">

    <div class="col-left">

        <div class="post">
            <time>Apr 1st 2020</time>
            <h2 class="title">{{title}}</h2>
            <h3 class="author">{{author}}</h3>
            <!--h4 class="subtitle">{{subtitle}}</h4-->
        </div>

        <div class="audio">
            <div class="play">
                <button id="audio-button"><img src="/play.svg" width="10" /></button>
                <track>Anna Friz â€¢Jeff Kolar</track>
            </div>

            <time id='current-time'>00:00:00</time>

            <div id="audio" src="{{audio}}"></div>


            <div class="tracklist">
                <h3>Description</h3>
                <p>{{tracklist}}</p>
            </div>

        </div>

    </div>

    <div class="col-right">

        {{#each images}}
        <div class="img-row">
            <img src="{{col_id_11}}" />

            <div class="epigraph">
                {{col_id_12}}
            </div>
        </div>
        {{/each}}
    </div>

    <div class="entries-nav">
        <a id="arrow-prev" href="{{prev}}"><img src="/arrow-prev.svg" /></a>
        <a id="arrow-next" href="{{next}}"><img src="/arrow-next.svg" /></a>
    </div>

</div>

</div>