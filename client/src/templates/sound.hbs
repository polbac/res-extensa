<div id="sound-content">

    <div class="col-left">

        <div class="post">
            <time>Apr 1st 2020</time>
            <h2 class="title">{{title}}</h2>
            <h3 class="author">{{author}}</h3>
            <!--h4 class="subtitle">{{subtitle}}</h4-->
        </div>

        <div class="audio">
            <div class="play">
                <button><img src="play.svg"/></button>
                <track>Anna Friz •Jeff Kolar</track>
            </div>

            <time>00:00:00</time>

            <audio controls
                src="https://file-examples-com.github.io/uploads/2017/11/file_example_MP3_700KB.mp3"></audio>
            <audio></audio>

            <div class="tracklist">
                <h3>Description</h3>
                <p>{{tracklist}}</p>
                1. Moondog - Bird´s Lament
                <br />
                2. Dirty Beaches - Lord Knows Best
                <br />
                3. Elvis - Tomorrow Night
                <br />
                4. Young Marble Giants - Eating Noddemix
                <br />
                5. Paul McCartney - Every Night
                <br />
                6. D.R. Hooker - Forge Your Own Chains
            </div>

        </div>

    </div>

    <div class="col-right">

        {{#each images}}
        <div class="img-row">
            <img src="{{col_id_11}}" />

            <div class="epigraph">
                {{col_id_12}}
            </div>
        </div>
        {{/each}}
    </div>

</div>

</div>