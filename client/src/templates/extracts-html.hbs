<!DOCTYPE html>
<html>

<head>
    <title>RES EXTENSA</title>
</head>

<body>
    {{#each extracts}}
    <div class="row img">
        <category>{{type}}</category>

        {{#ifEquals type 'image'}}
        {{#each images}}
        <img src="{{image}}" />
        {{/each}}
        {{/ifEquals}}

        {{#ifEquals type 'video'}}

        <video autoplay muted loop src="{{video}}" width="100%" />
        <div class="epigraph">
            {{title}}
        </div>
        {{/ifEquals}}

        {{#ifEquals type 'text'}}

        <div class="col-left">

            <div class="post">
                <time>Apr 1st 2020</time>
                <h2 class="title">{{title}}</h2>
                <h3 class="author">{{author}}</h3>
                <h4 class="subtitle">{{subtitle}}</h4>
            </div>

            <div class="text">
                {{{body}}}
            </div>

        </div>

        <div class="col-right">

            {{#each images}}
            <div class="img-row">
                <img src="{{image}}" />

                <div class="epigraph">
                    {{col_id_12}}
                </div>
            </div>
            {{/each}}
        </div>
        {{/ifEquals}}

        {{#ifEquals type 'sound'}}

        <img src="{{images.0.col_id_11}}" />
        <div class="epigraph">
            {{title}}
        </div>

        {{/ifEquals}}



    </div>
    {{/each}}
</body>

</html>